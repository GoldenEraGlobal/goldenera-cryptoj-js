{
  "name": "@goldenera/cryptoj",
  "version": "0.1.0",
  "description": "GoldenEra blockchain transaction library for TypeScript",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "packageManager": "pnpm@10.25.0",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "goldenera",
    "blockchain",
    "crypto",
    "transaction",
    "wallet",
    "ethereum",
    "web3"
  ],
  "author": "GoldenEra Global",
  "license": "MIT",
  "homepage": "https://github.com/GoldenEraGlobal/goldenera-cryptoj-js#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GoldenEraGlobal/goldenera-cryptoj-js.git"
  },
  "bugs": {
    "url": "https://github.com/GoldenEraGlobal/goldenera-cryptoj-js/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  },
  "dependencies": {
    "viem": "^2.21.0",
    "@scure/bip39": "^1.3.0",
    "@scure/bip32": "^1.4.0",
    "@noble/curves": "^1.4.0",
    "@noble/hashes": "^1.4.0",
    "rlp": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
